<div id="example">
    <div id="mainGrid" class="demo-section k-content">
        <div id="engagementTabStrip">

            @*List of Tab Names*@
            <ul id="engagementTabs" hidden>
                <li class="k-state-active" onclick="tabChange('EngagementTab')">Engagements</li>
                <li onclick="tabChange('ReviewTab')">Review and Approval</li>
                <li onclick="tabChange('ScheduleTab')">Scheduling</li>
            </ul>

            @*Start of Tab Body (in order)*@
            <div id="engagementTabDetails">
                <div id="engagementGrid"></div>
            </div>
            <div id="reviewTabDetails">
                <div id="reviewEngagementGrid"></div>
            </div>
            <div id="schedulingTabDetails">
                <div id="schedulingEngagementGrid"></div>
            </div>
            @*End of Tab Body (in order)*@

        </div>
